# FMP Data Client - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# FMP API Configuration
# =============================================================================
FMP_API_KEY=your_fmp_api_key_here
FMP_TIER=STARTER  # STARTER, PREMIUM, or ULTIMATE

# =============================================================================
# MySQL Cache Configuration
# =============================================================================
FMP_CACHE_ENABLED=true
MYSQL_HOST=mysql  # Use 'mysql' for docker-compose, 'localhost' for local
MYSQL_PORT=3306
MYSQL_USER=fmp_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=fmp_cache
MYSQL_ROOT_PASSWORD=your_root_password_here  # Only needed for docker-compose
MYSQL_POOL_SIZE=10

# =============================================================================
# LLM Summarization (Optional)
# =============================================================================
FMP_SUMMARIZATION_ENABLED=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here
FMP_DEFAULT_MODEL=claude-3-haiku-20240307
FMP_TRANSCRIPT_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# REST API Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false  # Set to true for development
API_WORKERS=4

# =============================================================================
# Rate Limiting
# =============================================================================
FMP_CALLS_PER_MINUTE=300  # Adjust based on your FMP tier
FMP_MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
